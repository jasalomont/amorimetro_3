<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All amorimetros
    </h1>

    <a href="/amorimetros/new" class="btn btn-block btn-outline-secondary">
      Add a new amorimetro
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Points
        </th>

        <th>
          User
        </th>

        <th>
          Reason
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @amorimetros.each do |amorimetro| %>
      <tr>
        <!-- Display amorimetro.id start -->
        <td>
          <%= amorimetro.id %>
        </td>
        <!-- Display amorimetro.id end -->

        <!-- Display amorimetro.points start -->
        <td>
          <%= amorimetro.points %>
        </td>
        <!-- Display amorimetro.points end -->

        <!-- Display amorimetro.user_id start -->
        <td>
          <% if amorimetro.user.present? %>
            <a href="/users/<%= amorimetro.user.id %>">
              <%= amorimetro.user.email %>
            </a>
          <% end %>
        </td>
        <!-- Display amorimetro.user_id end -->

        <!-- Display amorimetro.reason start -->
        <td>
          <%= amorimetro.reason %>
        </td>
        <!-- Display amorimetro.reason end -->

        <!-- Display amorimetro.created_at start -->
        <td>
          <%= time_ago_in_words(amorimetro.created_at) %> ago
        </td>
        <!-- Display amorimetro.created_at end -->

        <!-- Display amorimetro.updated_at start -->
        <td>
          <%= time_ago_in_words(amorimetro.updated_at) %> ago
        </td>
        <!-- Display amorimetro.updated_at end -->

        <td>
          <a href="/amorimetros/<%= amorimetro.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @amorimetros, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
