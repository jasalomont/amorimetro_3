<% if @amorimetro.present? %>
  <% if @amorimetro.errors.any? %>
    <% @amorimetro.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new amorimetro
</h1>


<hr>

<form action="/create_amorimetro" method="post">

  <div class="form-group">
    <label for="points">
      Points
    </label>

    <input type="text" id="points" name="points" class="form-control" value="<%= @amorimetro.points %>">
  </div>

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="reason">
      Reason
    </label>

    <input type="text" id="reason" name="reason" class="form-control" value="<%= @amorimetro.reason %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create amorimetro
  </button>
</form>

<hr>

<a href="/amorimetros">
  Go back
</a>
